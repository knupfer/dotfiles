#!/usr/bin/awk -f

# $2 !~ /.*[0123456789~@#$%^&_*+=(){}\[\]|\/\\:;.,?!].*|^-|^'|-$|'$/ { print $2, $1 }

# !word && $2 !~ /.*[0123456789~@#$%^&_*+=(){}\[\]|\/\\:;.,?!].*|^-|^'|-$|'$/ { word = $2; print word }

# word && $2 !~ /.*[0123456789~@#$%^&_*+=(){}\[\]|\/\\:;.,?!].*|^-|^'|-$|'$/ {
#     if ($2 == word) {print word " match"} else {word = $2; print word }
# }


!word && $2 !~ /.*[0123456789~@#$%^&*+=(){}\[\]|\/\\:;.,?!].*|^-|^'|-$|'$/ { word = $2; freq = $1 }

word && $2 !~ /.*[0123456789~@#$%^&*+=(){}[]|\/\\:;.,?!].*|^-|^'|-$|'$/ {
    if ($2 == word) { freq += $1 }
    else {
	if (freq >= 50) {
	  gsub(/_/, " ", word)
	  print "\"" word "\"", freq
	}
	word = $2
	freq = $1
    }
}

